      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "tooltip": false,
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}  {percent}%",
    "format-icons": ["ÔÅÇ", "ÔÉ´", "üîÜ"],
    "on-click": "pgrep -x hyprsunset && pkill hyprsunset || hyprsunset -t 5000",
    "on-click-right": "hyprsunset -t 6500",
    "tooltip": false,
  },

  "battery": {
    "format": "{capacity}% {icon}",
    "format-icons": {
      "charging": ["Û∞ÇÑ"],
