{
  "height": 55,
  "spacing": 5,

  "modules-left": ["custom/arch", "hyprland/workspaces"],
  "modules-center": ["custom/cavak", "clock",],
  "modules-right": [
    "network",
    "pulseaudio",
    "backlight",
    "battery",
    "tray",
    "custom/notification",
  ],

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {},
    "sort-by-number": true,
    "persistent-workspaces": {
      "*": 4,
    },
  },

  "tray": {
    "icon-size": 16,
    "spacing": 15
},

  "custom/arch": {
    "format": "ÔåÉ",
    "on-click": "walker",
    "tooltip": false,
  },

  "custom/cava": {
    "format": "{}",
    "exec": "~/.config/waybar/cava.sh",
    "tooltip": false,
  },

  "clock": {
    "format": "{:%I:%M %p}",
    "format-alt": "{:%Y-%m-%d}",
    "tooltip-format": "<big>{:%Y %B %d}</big>\n<tt><small>{calendar}</small></tt>",
  },

  "network": {
    "format-wifi": "Ôá´ {signalStrength}% ‚á£{bandwidthDownBytes:>3} ‚á°{bandwidthUpBytes:>3}",
    "format-ethernet": "Ôûñ ‚á£{bandwidthDownBytes:>3} ‚á°{bandwidthUpBytes:>3}",
    "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "‚ö†",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
