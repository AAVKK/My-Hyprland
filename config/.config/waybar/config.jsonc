      "full": ["Û∞ÇÖ"],
    },
    "interval": 5,
    "tooltip": false,
  },
  "custom/notification": {
    "tooltip": false,
    "format": "<span size='16pt'>{icon}</span>",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ç†",
      "dnd-none": "Û∞™ì",
      "inhibited-notification": "Û∞Çõ",
      "inhibited-none": "Û∞™ë",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞™ë",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
